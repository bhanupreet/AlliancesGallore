<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_reminders"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/reminders_monthview_switch"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@color/colorPrimary"
            android:checkMark="@drawable/ic_arrow_drop_down"
            android:gravity="center_vertical"
            android:stateListAnimator="@anim/rotate_clockwise"
            android:text="month"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </com.google.android.material.appbar.AppBarLayout>


    <com.kizitonwose.calendarview.CalendarView
        android:id="@+id/calendarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cv_dayViewResource="@layout/calendar_day_layout"
        app:cv_hasBoundaries="true"
        app:cv_orientation="horizontal"
        app:cv_scrollMode="paged"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout_reminders" />

    <TextView
        android:id="@+id/selectedday_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="selected day"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/calendarview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layoutAnimation="@anim/layout_anim"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/selectedday_text" />
</androidx.constraintlayout.widget.ConstraintLayout>